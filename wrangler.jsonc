{
  // Cloudflare Worker configuration for devjournal.io
  "name": "devjournal",
  "main": "src/worker/index.ts",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],
  
  // Build configuration
  "build": {
    "command": "pnpm build"
  },
  
  // Asset configuration - serve static files from dist
  "assets": {
    "directory": "./dist",
    "binding": "ASSETS"
  },
  
  // Environment variables (if needed)
  "vars": {
    "ENVIRONMENT": "production"
  }
}
